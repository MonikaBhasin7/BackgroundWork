<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StartThreadActivity">


        <Button
            android:id="@+id/btn_start_thread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Start Thread"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_stop_thread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop Thread"
            app:layout_constraintEnd_toEndOf="@+id/btn_start_thread"
            app:layout_constraintStart_toStartOf="@+id/btn_start_thread"
            app:layout_constraintTop_toBottomOf="@+id/btn_start_thread" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
